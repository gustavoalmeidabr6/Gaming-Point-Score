{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.py"
    }
    
    // A regra "source": "/(.*)" FOI REMOVIDA.
    // O Next.js vai gerir o resto automaticamente.
  ]
}